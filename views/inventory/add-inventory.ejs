<div class="inventory-form-container">
    <h1 class="inventory-form-title">Add New Inventory</h1>
    
    <% if (messages.notice) { %>
        <div class="form-notice">
            <p><%= messages.notice %></p>
        </div>
    <% } %>
    
    <form class="inventory-form" action="/inv/add-inventory" method="post">
        <div class="form-section">
            <div class="form-group">
                <label class="form-label" for="classification_id">Classification:</label>
                <div class="form-select-wrapper">
                    <%- classificationList %>
                </div>
            </div>
        </div>

        <div class="form-section">
            <div class="form-group">
                <label class="form-label" for="inv_make">Make:</label>
                <input class="form-input" type="text" name="inv_make" id="inv_make" required value="<%= inv_make %>">
            </div>

            <div class="form-group">
                <label class="form-label" for="inv_model">Model:</label>
                <input class="form-input" type="text" name="inv_model" id="inv_model" required value="<%= inv_model %>">
            </div>
        </div>

        <div class="form-section form-row">
            <div class="form-group">
                <label class="form-label" for="inv_year">Year:</label>
                <input class="form-input" type="number" name="inv_year" id="inv_year" required value="<%= inv_year %>">
            </div>

            <div class="form-group">
                <label class="form-label" for="inv_price">Price ($):</label>
                <input class="form-input" type="number" step="0.01" name="inv_price" id="inv_price" required value="<%= inv_price %>">
            </div>

            <div class="form-group">
                <label class="form-label" for="inv_miles">Miles:</label>
                <input class="form-input" type="number" name="inv_miles" id="inv_miles" required value="<%= inv_miles %>">
            </div>
        </div>

        <div class="form-section">
            <div class="form-group">
                <label class="form-label" for="inv_description">Description:</label>
                <textarea class="form-textarea" name="inv_description" id="inv_description" required><%= inv_description %></textarea>
            </div>
        </div>

        <div class="form-section form-row">
            <div class="form-group">
                <label class="form-label" for="inv_image">Image Path:</label>
                <input class="form-input" type="text" name="inv_image" id="inv_image" value="<%= inv_image %>">
            </div>

            <div class="form-group">
                <label class="form-label" for="inv_thumbnail">Thumbnail Path:</label>
                <input class="form-input" type="text" name="inv_thumbnail" id="inv_thumbnail" value="<%= inv_thumbnail %>">
            </div>
        </div>

        <div class="form-section">
            <div class="form-group">
                <label class="form-label" for="inv_color">Color:</label>
                <input class="form-input" type="text" name="inv_color" id="inv_color" required value="<%= inv_color %>">
            </div>
        </div>

        <div class="form-actions">
            <button class="form-submit-btn" type="submit">Add Inventory</button>
        </div>
    </form>
</div>