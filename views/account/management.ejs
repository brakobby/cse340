<div class="account-dashboard">
  <% if (locals.accountData) { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in as <%= locals.accountData.account_type %></p>
  <% } %>

  <p><a href="/account/update" class="dashboard-link">Update account information</a></p>
  <p><a href="/account/update/password" class="dashboard-link">Change password</a></p>

  <% if (locals.accountData && (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin")) { %>
    <div class="admin-section">
      <h3>Inventory Management</h3>
      <p><a href="/inv/" class="admin-link">Go to Inventory Management</a></p>
      <p><a href="/inv/add-classification" class="admin-link">Add New Classification</a></p>
      <p><a href="/inv/add-inventory" class="admin-link">Add New Vehicle</a></p>
    </div>
  <% } %>
</div>