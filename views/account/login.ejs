
<div class="form-container">
  <h1><%= title %></h1>

  <% if (messages().error) { %>
    <div class="flash error">
      <% messages().error.forEach(function(message) { %>
        <p><%= message %></p>
      <% }) %>
    </div>
  <% } %>

  <% if (errors) { %>
        <ul class="validation-errors">
            <% errors.array().forEach(function(error) { %>
            <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>

  <form class="login-form" action="/account/login" method="post">
    <label for="email">Email address</label>
    <input type="email" name="account_email" id="account_email" required value="<%= account_email %>">

    <label for="password">Password</label>
    <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

    <button type="submit">Login</button>
  </form>

  <p class="register-link">
    Don't have an account?
    <a href="/account/register">Register here</a>.
  </p>
</div>




